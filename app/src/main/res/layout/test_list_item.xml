<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test">

    <TextView
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#DCC48E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/button_selector"
        android:text="Button"
        android:textColor="#27233A"
        app:layout_constraintStart_toStartOf="@+id/topic"
        app:layout_constraintTop_toTopOf="@+id/topic" />

    <Button
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_selector"
        android:text="Button"
        android:textColor="#27233A"
        app:layout_constraintEnd_toEndOf="@+id/topic"
        app:layout_constraintTop_toTopOf="@+id/topic" />

    <Button
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_selector"
        android:text="Button"
        android:textColor="#27233A"
        app:layout_constraintBottom_toBottomOf="@+id/topic"
        app:layout_constraintStart_toStartOf="@+id/topic"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <Button
        android:id="@+id/option4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_selector"
        android:text="Button"
        android:textColor="#27233A"
        app:layout_constraintBottom_toBottomOf="@+id/topic"
        app:layout_constraintEnd_toEndOf="@+id/topic"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="#DCC48E"
        app:layout_constraintEnd_toEndOf="@+id/topic"
        app:layout_constraintStart_toStartOf="@+id/topic"
        app:layout_constraintTop_toTopOf="@+id/topic" />
</androidx.constraintlayout.widget.ConstraintLayout>